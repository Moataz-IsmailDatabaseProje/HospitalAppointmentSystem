@model HastaneRandevuSistemi.Models.Randevu

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h1>Silmek</h1>

    <h3>Bunu silmek istediğinizden emin misiniz?</h3>
    <div>
        <h4>Randevu</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tarih)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tarih)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doktor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doktor.Adi)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Poliklinik)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Poliklinik.Adi)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            <a asp-action="Index">Listeye geri dön</a>
        </form>
    </div>
</div>