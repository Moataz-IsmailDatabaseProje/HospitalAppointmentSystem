@model HastaneRandevuSistemi.Models.Randevu

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h1>Edit</h1>

    <h4>Randevu</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Tarih" class="control-label"></label>
                    <input asp-for="Tarih" class="form-control" />
                    <span asp-validation-for="Tarih" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DoktorId" class="control-label"></label>
                    <select asp-for="DoktorId" class="form-control" asp-items="ViewBag.DoktorId"></select>
                    <span asp-validation-for="DoktorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KullaniciId" class="control-label"></label>
                    <select asp-for="KullaniciId" class="form-control" asp-items="ViewBag.KullaniciId"></select>
                    <span asp-validation-for="KullaniciId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to Ana Sayfa</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
